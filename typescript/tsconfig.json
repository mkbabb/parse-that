{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "lib": ["ES2022", "ES2023"],
        "strict": true,
        "verbatimModuleSyntax": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "sourceMap": false,
        "declaration": true,
        "declarationMap": true
    },
    "include": ["src/", "test/"],
    "exclude": ["test/benchmarks/", "test/tmp.bench.ts"]
}
